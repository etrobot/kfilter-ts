{
  "name": "kfilter-ts",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "type": "module",
  "scripts": {
    "dev": "pnpm -r dev",
    "build": "pnpm -r build",
    "check-types": "pnpm -r check-types",
    "dev:native": "pnpm --filter native dev",
    "dev:web": "pnpm --filter web dev",
    "dev:server": "pnpm --filter server dev",
    "db:push": "pnpm --filter @kfilter-ts/db db:push",
    "db:studio": "pnpm --filter @kfilter-ts/db db:studio",
    "db:generate": "pnpm --filter @kfilter-ts/db db:generate",
    "db:migrate": "pnpm --filter @kfilter-ts/db db:migrate",
    "db:local": "pnpm --filter @kfilter-ts/db db:local"
  },
  "dependencies": {
    "@kfilter-ts/env": "workspace:*",
    "dotenv": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@kfilter-ts/config": "workspace:*",
    "@types/bun": "catalog:",
    "typescript": "catalog:"
  },
  "packageManager": "pnpm@10.14.0"
}
